@model List<Employee>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


    <table>
        <thead>
            <tr>
                <th>Action</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "EmployeeRegistration", new { @employee.EmployeeId })
                        @Html.ActionLink("Edit", "Edit", "EmployeeRegistration", new { @employee.EmployeeId })
                    </td>

                    <td>@employee.EmployeeFirstName</td>
                    <td>@employee.EmployeeLastName</td>
                    <td>@employee.Country</td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
